<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Основная тема приложения -->
    <style name="Theme.SmartShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/main_color</item>
        <item name="colorSecondary">@color/accent_color</item>

        <item name="android:colorBackground">@color/background_color</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:statusBarColor">@color/main_color</item>
        <item name="android:navigationBarColor">@color/main_color</item>
    </style>


    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/main_color</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/divider_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

</resources>
